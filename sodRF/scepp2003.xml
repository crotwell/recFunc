<?xml version="1.0" ?>

<sod
xmlns:xlink="http://www.w3.org/1999/xlink/"
>
  <properties>

    <property>
      <name>edu.sc.seis.sod.waveformarm.threads</name>
      <value>1</value>
    </property>

    <property>
      <name>edu.sc.seis.sod.databasetype</name>
      <value>edu.sc.seis.sod.database.HSqlDbManager</value>
    </property>

    <!-- number of days to get events per request to eventFinder -->

    <property>
      <name>edu.sc.seis.sod.daystoincrement</name>
      <value>7</value>
    </property>

    <!-- go back and reask server for events that may have appeared in server
         after this was first run. -->

    <property>
      <name>edu.sc.seis.sod.database.getNewEvents</name>
      <value>false</value>
    </property>
  </properties>

     <eventArm>

       <eventFinder>
        <name>ANHINGAEVENTDC</name>
        <dns>edu/sc/seis</dns>
            <boxArea>
            <latitudeRange>
                <unit>DEGREE</unit>
                <min>-90</min>
                <max>90</max>
            </latitudeRange>
            <longitudeRange>
                <unit>DEGREE</unit>
                <min>-180</min>
                <max>180</max>
            </longitudeRange>
            </boxArea>

<!-- Depths from 0 to 1000 kilometers are ok, -->
        <originDepthRange>
            <unitRange>
                <unit>KILOMETER</unit>
                <min>0</min>
                <max>1000</max>
            </unitRange>
        </originDepthRange>

<!-- Only take events from Apr-June -->
        <eventTimeRange>
        <timeRange>
            <startTime>20030101T00:00:00.001Z</startTime>
            <endTime>20041231T23:59:59.999Z</endTime>
        </timeRange>
        </eventTimeRange>


                <magnitudeRange>
                        <magType>M</magType>
                        <min>5.8</min>
                        <max>10.0</max>
                </magnitudeRange>

                <catalog>BIGQUAKE</catalog>
                <contributor>NEIC</contributor>

       </eventFinder>


<!-- Print out a line for each successful event -->
    <printLineEventProcess/>


                <mapEventStatus xlink:href="status/eventMap.png"/>
                <eventStatusTemplate
                        outputLocation="status/time.html" xlink:href="jar:edu/sc/seis/sod/data/templates/eventArm/timeSorted.xml"/>
                <eventStatusTemplate
                        outputLocation="status/depth.html" xlink:href="jar:edu/sc/seis/sod/data/templates/eventArm/depthSorted.xml"/>
                <eventStatusTemplate
                        outputLocation="status/location.html" xlink:href="jar:edu/sc/seis/sod/data/templates/eventArm/locSorted.xml"/>
                <eventStatusTemplate
                        outputLocation="status/mag.html" xlink:href="jar:edu/sc/seis/sod/data/templates/eventArm/magSorted.xml"/>

   </eventArm>

   <networkArm>
    <networkFinder>
        <description>Connect to the SCEPP networkDC</description>
        <name>SCEPPNetworkDC</name>
        <dns>edu/sc/seis</dns>
<!-- recheck channels after some time -->
        <refreshInterval>
            <unit>MINUTE</unit>
            <value>3000</value>
        </refreshInterval>
    </networkFinder>

              <networkCode>SP</networkCode>

    <stationAND>
        <stationEffectiveTimeOverlap>
           <effectiveTimeOverlap>
               <min>20030101T00:00:00.001Z</min>
               <max>20041231T23:59:59.999Z</max>
           </effectiveTimeOverlap>
        </stationEffectiveTimeOverlap>
    </stationAND>

   <channelAND>
<!-- Accept any channel with B band code -->
    <channelOR>
        <bandCode>B</bandCode>
    </channelOR>

        <channelEffectiveTimeOverlap>
        <effectiveTimeOverlap>
            <min>20030101T00:00:00.001Z</min>
            <max>20041231T23:59:59.999Z</max>
        </effectiveTimeOverlap>
        </channelEffectiveTimeOverlap>

   </channelAND>

    <printlineChannelProcessor/>

    </networkArm>


    <waveFormArm>
      <eventStationAND>
        <distanceRange>
            <unit>DEGREE</unit>
            <min>30</min>
            <max>100</max>
        </distanceRange>
        <phaseExists>
            <phaseName>P</phaseName>
        </phaseExists>
      </eventStationAND>

    <localSeismogramArm>


    <phaseRequest>
        <beginPhase>ttp</beginPhase>
        <beginOffset>
            <unit>SECOND</unit>
            <value>-60</value>
        </beginOffset>
        <endPhase>ttp</endPhase>
        <endOffset>
            <unit>SECOND</unit>
            <value>60</value>
        </endOffset>
    </phaseRequest>


    <fixedDataCenter>
        <name>SCEPPSeismogramDC</name>
        <dns>edu/sc/seis</dns>
    </fixedDataCenter>

        <someCoverage/>

    <printlineSeismogramProcess/>

<!--
    <sacFileProcessor>
        <dataDirectory>SP_recfunc</dataDirectory>
        <eventDirLabel>
             <originTime>yyyy_DDD_HH_mm_ss</originTime>
             _<magnitude/>
        </eventDirLabel>
    </sacFileProcessor>

-->
    <externalSeismogramProcess>
        <classname>edu.sc.seis.receiverFunction.RecFuncProcessor</classname>
        <dataDirectory>SP_recfunc</dataDirectory>
                <eventDirLabel><originTime>yyyy_DDD_HH_mm_ss</originTime>_<magnitude/></eventDirLabel>
    </externalSeismogramProcess>

    </localSeismogramArm>


                <waveformEventTemplateGenerator>
                        <fileLoc>status/<originTime>yyyyMMddHHmmssSSS</originTime>/event.html</fileLoc>
                        <externalConfig xlink:href="jar:edu/sc/seis/sod/data/templates/waveformArm/waveformEvent.xml"/>
                </waveformEventTemplateGenerator>

   </waveFormArm>
</sod>
