<?xml version="1.0"?>
<geeConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="geeconfigurator.xsd">
    <title>EARS for RISTRA</title>
    <appendConfig>edu/sc/seis/gee/data/conf/DefaultConfig.xml</appendConfig>
    <activity>
        <id>ears</id>
        <title>EARS Earthquake Explorer</title>
        <description>EARS for RISTRA, XM99</description>
        <appendActivityId>DataExplorer</appendActivityId>
        <menubar>
            <menu>
                <name>File</name>
                <menuItem><taskid>recFuncView</taskid></menuItem>
            </menu>
        </menubar>
    </activity>
    <task>
        <id>TimeForEarthquakeSCEPP_DMC</id>
        <name>Rec Func View</name>
        <class>edu.sc.seis.receiverFunction.browser.EventSeismogramRFTask</class>
        <taskconfig>
            <name>showEventsTask</name>
            <value>ShowEvents</value>
        </taskconfig>
        <taskconfig>
            <name>loadSeismogramTask</name>
            <value>CustomTimeWindowALL</value>
        </taskconfig>
        <taskconfig>
            <name>channelChooserTask</name>
            <value>StationsFromSCEPP_DMC</value>
        </taskconfig>
        <taskconfig>
            <name>gee.task.width</name>
            <value>450</value>
        </taskconfig>
        <taskconfig>
            <name>gee.task.height</name>
            <value>250</value>
        </taskconfig>
        <taskconfig>
            <name>NoStationWithDataMessage</name>
            <value>Either no stations were selected or the selected stations are not active for this earthquake</value>
        </taskconfig>
        <toolbar>
            <toolitem>
                <taskid>QuakeFromIRIS</taskid>
            </toolitem>
            <toolitem>
                <taskid>ShowEvents</taskid>
            </toolitem>
            <toolitem>
                <taskid>WorldMap</taskid>
            </toolitem>
            <toolitem>
                <taskid>StationsFromSCEPP_DMC</taskid>
            </toolitem>
        </toolbar>
	</task>
    <task>
        <id>StationsFromSCEPP_DMC</id>
        <name>Station Chooser</name>
        <class>edu.sc.seis.gee.task.ChannelChooserTask</class>
        <tooltip>Choose Global Stations</tooltip>
        <icon>world-stations.png</icon>
        <taskconfig>
            <name>serverDNS_DMC</name>
            <value>edu/iris/dmc</value>
        </taskconfig>
        <taskconfig>
            <name>serverName_DMC</name>
            <value>IRIS_NetworkDC</value>
        </taskconfig>
        <taskconfig>
            <name>network_XM</name>
            <value>XM</value>
        </taskconfig>
        <taskconfig>
            <name>showNetworks</name>
            <value>false</value>
        </taskconfig>
        <taskconfig>
            <name>showCodes</name>
            <value>true</value>
        </taskconfig>
        <taskconfig>
            <name>loadSeismogramTask</name>
            <value>CustomTimeWindowALL</value>
        </taskconfig>
        <taskconfig>
            <name>eventSelector</name>
            <value>ShowEvents</value>
        </taskconfig>
        <taskconfig>
            <name>gee.task.width</name>
            <value>450</value>
        </taskconfig>
        <taskconfig>
            <name>gee.task.height</name>
            <value>300</value>
        </taskconfig>
        <toolbar>
            <toolitem>
                <taskid>AddNetwork</taskid>
            </toolitem>
        </toolbar>
    </task>
    <appendToTask>
        <id>QuakeFromIRIS</id>
        <class>edu.sc.seis.gee.task.QueryEventsTask</class>
        <taskconfig>
            <name>minMag</name>
            <value>6</value>
        </taskconfig>
        <taskconfig>
            <name>startTime</name>
            <complexValue>
                <date>1999-05-01</date>
            </complexValue>
        </taskconfig>
        <taskconfig>
            <name>endTime</name>
            <complexValue>
                <date>2000-07-01</date>
            </complexValue>
        </taskconfig>
    </appendToTask>
    <appendToTask>
        <id>WorldMap</id>
        <class>edu.sc.seis.gee.task.OpenMapTask</class>
        <taskconfig>
            <name>bigEvents</name>
            <value>QuakeFromIRIS</value>
        </taskconfig>
    </appendToTask>
</geeConfig>
