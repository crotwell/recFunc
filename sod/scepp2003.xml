<?xml version="1.0" ?>

<sod xmlns="http://www.seis.sc.edu/xschema/sod/1.0"
xsi:schemaLocation="http://www.seis.sc.edu/xschema/sod/1.0 http://www.seis.sc.edu/xschema/sod/1.0/sod.xsd"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>

<!--
xmlns="http://www.seis.sc.edu/xschema/sod/1.0"
xsi:schemaLocation="http://www.seis.sc.edu/xschema/sod/1.0
    http://www.seis.sc.edu/xschema/sod/1.0/sod.xsd"
    xsi:noNamespaceSchemaLocation='http://www.seis.sc.edu/xschema/sod/1.0'
xsi:noNamespaceSchemaLocation="sod.xsd"
xsi:noNamespaceSchemaLocation="http://www.seis.sc.edu/xschema/sod/1.0"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="sod.xsd"
       xsi:noNamespaceSchemaLocation='http://www.seis.sc.edu/xschema/sod/sod.xsd'>
-->
  <properties>

    <property>
      <name>edu.sc.seis.sod.waveformarm.threads</name>
      <value>1</value>
    </property>

    <property>
      <name>edu.sc.seis.sod.databasetype</name>
      <value>edu.sc.seis.sod.database.HSqlDbManager</value>
    </property>

    <!-- number of days to get events per request to eventFinder -->

    <property>
      <name>edu.sc.seis.sod.daystoincrement</name>
      <value>7</value>
    </property>

    <!-- go back and reask server for events that may have appeared in server
         after this was first run. -->

    <property>
      <name>edu.sc.seis.sod.database.getNewEvents</name>
      <value>false</value>
    </property>
  </properties>

<!-- The event arm decides which events are interesting. This is based purely on the event itself, not the relationship to a particular station, etc. -->
     <eventArm>

<!-- The event finder is one way of finding out about events. It is for events that have already been stored in a database somewhere, and so could be considered historical in some sense. The event channel is the other method, and it listens for new events. -->
       <eventFinder>

<!-- The EventDC will have a name that it is registered under in the naming service. -->
        <name>ANHINGAEVENTDC</name>

<!-- The EventDC will also be registered under a subdirectory according to its reversed DNS. -->
        <dns>edu/sc/seis</dns>

<!-- We will take events from anywhere -->
            <boxArea>
            <latitudeRange>
                <min>-90</min>
                <max>90</max>
            </latitudeRange>
            <longitudeRange>
                <min>-180</min>
                <max>180</max>
            </longitudeRange>
            </boxArea>

<!-- Depths from 0 to 1000 kilometers are ok, -->
        <originDepthRange>
            <unitRange>
                <unit>KILOMETER</unit>
                <min>0</min>
                <max>1000</max>
            </unitRange>
        </originDepthRange>

<!-- Only take events from Apr-June -->
        <eventTimeRange>
        <timeRange>
            <startTime>20030101T00:00:00.001Z</startTime>
            <endTime>20041231T23:59:59.999Z</endTime>
        </timeRange>
        </eventTimeRange>


                <magnitudeRange>
                        <magType>M</magType>
                        <min>5.8</min>
                        <max>10.0</max>
                </magnitudeRange>

                <catalog><value>BIGQUAKE</value></catalog>
                <contributor><value>NEIC</value></contributor>

       </eventFinder>


<!-- Print out a line for each successful event -->
    <printLineEventProcess/>

   </eventArm>

   <networkArm>
    <networkFinder>
        <description>Connect to the SCEPP networkDC</description>
        <name>SCEPPNetworkDC</name>
        <dns>edu/sc/seis</dns>
<!-- recheck channels after some time -->
        <refreshInterval>
            <unit>MINUTE</unit>
            <value>3000</value>
        </refreshInterval>
    </networkFinder>

        <networkIDOR>
              <networkCode><value>SP</value></networkCode>
        </networkIDOR>

        <stationEffectiveTimeOverlap>
        <effectiveTimeOverlap>
            <min>20030101T00:00:00.001Z</min>
            <max>20041231T23:59:59.999Z</max>
        </effectiveTimeOverlap>
        </stationEffectiveTimeOverlap>

<!-- Accept any channel with B band code -->
    <channelIDOR>
        <bandCode><value>B</value></bandCode>
    </channelIDOR>

   <channelAND>
        <channelEffectiveTimeOverlap>
        <effectiveTimeOverlap>
            <min>20030101T00:00:00.001Z</min>
            <max>20031231T23:59:59.999Z</max>
        </effectiveTimeOverlap>
        </channelEffectiveTimeOverlap>

   </channelAND>

    <printlineChannelProcessor/>

    </networkArm>


    <waveFormArm>
        <distanceRange>
            <unit>DEGREE</unit>
            <min>30</min>
            <max>100</max>
        </distanceRange>

    <localSeismogramArm>

    <fixedDataCenter>
        <name>SCEPPSeismogramDC</name>
        <dns>edu/sc/seis</dns>
    </fixedDataCenter>

    <phaseRequest>
        <beginPhase>ttp</beginPhase>
        <beginOffset>
            <unit>SECOND</unit>
            <value>-60</value>
        </beginOffset>
        <endPhase>ttp</endPhase>
        <endOffset>
            <unit>SECOND</unit>
            <value>60</value>
        </endOffset>
    </phaseRequest>


        <someCoverage/>

    <printlineSeismogramProcess/>

<!--
    <sacFileProcessor>
        <dataDirectory>SP_rf2003</dataDirectory>
        <eventDirLabel>
             <originTime>yyyy_DDD_HH_mm_ss</originTime>
             _N
        </eventDirLabel>
    </sacFileProcessor>

-->
    <externalSeismogramProcess>
        <classname>edu.sc.seis.receiverFunction.RecFuncProcessor</classname>
        <dataDirectory>SP_rf2003</dataDirectory>
                <eventDirLabel>
                     <originTime>yyyy_DDD_HH_mm_ss</originTime>
                     _N
                </eventDirLabel>
    </externalSeismogramProcess>

    </localSeismogramArm>

   </waveFormArm>
</sod>
