<?xml version="1.0" ?>

<sod xmlns:xlink="http://www.w3.org/1999/xlink/" >
  <properties>
      <runName>IRIS RecFunc</runName>
      <statusBase>status</statusBase>
                <eventQueryIncrement>
                        <value>1</value>
                        <unit>WEEK</unit>
                </eventQueryIncrement>
                <eventLag>
                        <value>1</value>
                        <unit>WEEK</unit>
                </eventLag>
                <eventRefreshInterval>
                        <value>6</value>
                        <unit>MINUTE</unit>
                </eventRefreshInterval>
                <waveformWorkerThreads>1</waveformWorkerThreads>
                <maxRetryDelay>
                        <value>16</value>
                        <unit>DAY</unit>
                </maxRetryDelay>
  </properties>

     <eventArm>

       <eventFinder>
        <name>IRIS_EventDC</name>
        <dns>edu/iris/dmc</dns>
            <boxArea>
            <latitudeRange>
                <unit>DEGREE</unit>
                <min>-90</min>
                <max>90</max>
            </latitudeRange>
            <longitudeRange>
                <unit>DEGREE</unit>
                <min>-180</min>
                <max>180</max>
            </longitudeRange>
            </boxArea>

<!-- Depths from 0 to 1000 kilometers are ok, -->
        <originDepthRange>
            <unitRange>
                <unit>KILOMETER</unit>
                <min>600</min>
                <max>1000</max>
            </unitRange>
        </originDepthRange>

        <eventTimeRange>
        <timeRange>
            <startTime>19940601T00:00:00.001Z</startTime>
            <endTime>19940631T23:59:59.999Z</endTime>
        </timeRange>
        </eventTimeRange>


                <magnitudeRange>
                        <min>6.7</min>
                        <max>10.0</max>
                </magnitudeRange>

                <catalog>PREF</catalog>
                <contributor>IRIS-DMC</contributor>

       </eventFinder>

<!-- Print out a line for each successful event -->
    <printLineEventProcess/>

                <mapEventStatus xlink:href="status/eventMap.png"/>
                <eventStatusTemplate>
                        <eventConfig xlink:href="jar:edu/sc/seis/sod/data/templates/eventArm/timeSorted.xml"/>
                </eventStatusTemplate>
                <eventStatusTemplate>
                        <eventConfig xlink:href="jar:edu/sc/seis/sod/data/templates/eventArm/depthSorted.xml"/>
                </eventStatusTemplate>
                <eventStatusTemplate>
                        <eventConfig xlink:href="jar:edu/sc/seis/sod/data/templates/eventArm/locSorted.xml"/>
                </eventStatusTemplate>
                <eventStatusTemplate>
                        <eventConfig xlink:href="jar:edu/sc/seis/sod/data/templates/eventArm/magSorted.xml"/>
                </eventStatusTemplate>

   </eventArm>

   <networkArm>
    <networkFinder>
        <description>Connect to the SCEPP networkDC</description>
        <name>IRIS_NetworkDC</name>
        <dns>edu/iris/dmc</dns>
<!-- recheck channels after some time -->
        <refreshInterval>
            <unit>MINUTE</unit>
            <value>3000</value>
        </refreshInterval>
    </networkFinder>

    <networkOR>
       <networkCode>II</networkCode>
       <networkCode>IU</networkCode>
       <networkCode>IC</networkCode>
    </networkOR>

   <channelAND>
<!-- Accept any channel with B band code -->
    <channelOR>
        <bandCode>B</bandCode>
    </channelOR>
    <gainCode>H</gainCode>
   </channelAND>

    <printlineChannelProcessor/>
                <networkInfoTemplateGenerator>
                    <netConfig xlink:href="jar:edu/sc/seis/sod/data/templates/networkArm/networks.xml"/>
                    <stationConfig xlink:href="jar:edu/sc/seis/sod/data/templates/networkArm/stations.xml"/>
                    <channelConfig xlink:href="jar:edu/sc/seis/sod/data/templates/networkArm/channels.xml"/>
                </networkInfoTemplateGenerator>
    </networkArm>


    <waveformArm>
      <eventStationAND>
        <distanceRange>
            <unit>DEGREE</unit>
            <min>30</min>
            <max>100</max>
        </distanceRange>
        <phaseExists>
            <modelName>prem</modelName>
            <phaseName>P</phaseName>
        </phaseExists>
      </eventStationAND>

    <motionVectorArm>

     <requestGeneratorWrapper>
    <phaseRequest>
        <beginPhase>P</beginPhase>
        <beginOffset>
            <unit>SECOND</unit>
            <value>-120</value>
        </beginOffset>
        <endPhase>ttp</endPhase>
        <endOffset>
            <unit>SECOND</unit>
            <value>180</value>
        </endOffset>
    </phaseRequest>
     </requestGeneratorWrapper>

    <fixedDataCenter>
        <name>IRIS_PondDataCenter</name>
        <dns>edu/iris/dmc</dns>
    </fixedDataCenter>

    <ORAvailableDataWrapper>
        <someCoverage/>
    </ORAvailableDataWrapper>

    <ORLocalSeismogramSubsetterWrapper>
            <phaseSignalToNoise>
                <modelName>prem</modelName>
                <phaseName>P</phaseName>
                <shortOffsetBegin>
                    <unit>SECOND</unit>
                    <value>-5</value>
                </shortOffsetBegin>
                <shortOffsetEnd>
                    <unit>SECOND</unit>
                    <value>5</value>
                </shortOffsetEnd>
                <longOffsetBegin>
                    <unit>SECOND</unit>
                    <value>-105</value>
                </longOffsetBegin>
                <longOffsetEnd>
                    <unit>SECOND</unit>
                    <value>-5</value>
                </longOffsetEnd>
                <ratio>2.7</ratio>
            </phaseSignalToNoise>
    </ORLocalSeismogramSubsetterWrapper>


    <printlineSeismogramProcess/>

    <phaseCut>
        <beginPhase>P</beginPhase>
        <beginOffset>
            <unit>SECOND</unit>
            <value>-30</value>
        </beginOffset>
        <endPhase>P</endPhase>
        <endOffset>
            <unit>SECOND</unit>
            <value>120</value>
        </endOffset>
    </phaseCut>
    <rMean/>
    <rTrend/>
    <taper/>

    <filter>
       <lowFreqCorner><value>50</value><unit>SECOND</unit></lowFreqCorner>
       <highFreqCorner><value>5</value><unit>HERTZ</unit></highFreqCorner>
       <numPoles>2</numPoles>
       <filterType>NONCAUSAL</filterType>
    </filter>


    <externalChannelGroupSeismogramProcess>
        <classname>edu.sc.seis.receiverFunction.RecFuncProcessor</classname>
        <fileType>sac</fileType>
        <dataDirectory>IRIS_recfunc</dataDirectory>
        <eventDirLabel><originTime>yyyy_DDD_HH_mm_ss</originTime>_<magnitude/></eventDirLabel>
        <gaussianWidth>3.0</gaussianWidth>
    </externalChannelGroupSeismogramProcess>

       <localSeismogramTemplateGenerator>  
                <seismogramConfig xlink:href="jar:edu/sc/seis/receiverFunction/rfTemplate.vm"/>
            </localSeismogramTemplateGenerator>

    </motionVectorArm>

                <waveformEventTemplateGenerator>
                        <waveformConfig xlink:href="jar:edu/sc/seis/sod/data/templates/waveformArm/waveformEvent.xml"/>
                </waveformEventTemplateGenerator>

   </waveformArm>
</sod>
